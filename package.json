{
  "private": true,
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "eslint": "^2.13.0",
    "eslint-config-google": "^0.6.0",
    "stylelint": "^6.6.0",
    "stylelint-config-standard": "^9.0.0",
    "watch": "^0.18.0"
  },
  "scripts": {
    "lint:js": "eslint \"src/**/*.js\"; exit 0",
    "lint:css": "stylelint \"src/**/*.css\"; exit 0",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:watch": "watch 'npm run lint' src",
    "serve": "browser-sync start --server 'src' --files 'src'",
    "prestart": "npm run lint",
    "start": "npm run lint:watch & npm run serve"
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": "src/styles/normalize.css"
  }
}
